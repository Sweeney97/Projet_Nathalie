!% -SD
!%
Constant Story "Projet Nathalie";
Constant Headline "^Antoine Sweeney^";
Constant MANUAL_PRONOUNS;           ! Optional, but useful

Include "Parser";
Include "VerbLib";


!------------------------------------------------------------------------------!

[ Initialise;
    location = etude;
    "^Bienvenue!^";
];

!------------------------------------------------------------------------------!

Class   Room
  with  description "Une simple chambre.",
  has   light;

Class   Furniture
  with  before [;
          Take,Pull,Push,PushDir:
            print_ret (The) self, " est trop lourd.";
        ],
  has   static supporter;

!------------------------------------------------------------------------------!

Room  etude "Un bureau d'etude"
  with  description "Il y a un couloir a l'est pour aller dans la descente.",
        e_to ladescente;

Furniture pupitre "Pupitre" etude
  with  name 'pupitre' 'bureau' 'table',
        description "Un bureau...";

Room    ladescente "La descente"
  with  description "Ca descend.",
        w_to etude;

!------------------------------------------------------------------------------!

Include "FrenchG";

!------------------------------------------------------------------------------!
